<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Synopsis header -->
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_details_synopsis_label"
            style="@style/movie_detail_text_label"
            android:text="@string/movie_details_synopsis_label"
            android:textSize="@dimen/all_title_text"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/movie_details_synopsis_value"
            app:layout_constraintTop_toTopOf="@+id/movie_details_synopsis_value" />

        <!-- Movie details -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/movie_details_synopsis_value"
            style="@style/movie_detail_text_value"
            android:layout_width="@dimen/zero_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_synopsis_label"
            tools:text="@string/debug_movie_details_synopsis_text"/>
    </android.support.constraint.ConstraintLayout>
